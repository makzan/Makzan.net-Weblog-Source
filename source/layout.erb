<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Makzan<%= ': ' + current_page.data.title unless current_page.data.title.nil? %></title>
    <link rel="stylesheet" href="/stylesheets/website.css">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <script type="text/javascript" src="//use.typekit.net/gku5yms.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  <body>
    <div class="page">
      <header>
        <h1><a href='/' title='Backt to home'>makzan</a><small>: I teach web design and app dev.</small></h1>
        <div class="search"><input type="text" class="st-default-search-input"></div>
      </header>

      <div id="main" role="main">
        <%= yield %>
      </div>

      <%= partial "aside" %>

      <footer>
        Copyright © 2005–2015 Makzan.
      </footer>
    </div>
    <script src="/javascripts/site.js"></script>
  </body>
</html>
