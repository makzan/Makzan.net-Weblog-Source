<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Makzan<%= ': ' + current_article.title unless current_article.nil? %></title>
    <link rel="stylesheet" href="/stylesheets/website.css">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <script src="http://mint-shm.rhcloud.com/?js" type="text/javascript"></script>
  </head>
  <body>
    <div class="page">

      <%= partial "top_area" %>

      <aside>
        <header>
          <h1><%= current_article.title %></h1>
          <p>—By <%= link_to 'Makzan', '/', title: 'Back to home.' %>, <time datetime="<%= current_article.date %>"><%= current_article.date.strftime('%e %B %Y') %></time>.</p>
        </header>
      </aside>

      <main id="main" role="main">
        <article>
          <%= yield %>

          <!--<p>Category: <%= current_article.tags.map{|tag| link_to(tag, tag_path(tag)) }.join(', ') %>.</p>-->
        </article>
      </main>


      <footer>
        <nav>
          <%= link_to 'Archive', '/archive/', title: 'Previous essays.' %>
          | <%= link_to 'Projects', '/projects/', title: 'Projects I build, including books and games.' %>
          | <%= link_to 'RSS Feed', '/feed.xml', title: 'Syndicated Feed.' %>
        </nav>
        <div class="search mobile-only"><input type="text" placeholder="Search..." class="st-default-search-input"></div>
        Copyright © 2005–2015 <a href='/about/'>Makzan</a>.
      </footer>
    </div>
    <script src="/javascripts/site.js"></script>
  </body>
</html>
