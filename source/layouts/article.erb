<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Makzan<%= ': ' + current_article.title unless current_article.nil? %></title>
    <link rel="stylesheet" href="/stylesheets/website.css">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <script type="text/javascript" src="//use.typekit.net/gku5yms.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <script src="http://mint-shm.rhcloud.com/?js" type="text/javascript"></script>
  </head>
  <body>
    <div class="page">
      <header>
        <h1><a href='/' title='Backt to home'>makzan</a><small>: I teach web design and app dev.</small></h1>
        <div class="search wide-screen-only"><input type="text" placeholder="Search..." class="st-default-search-input"></div>
      </header>

      <main id="main" role="main">
        <article>
          <h1><%= link_to current_article.title, current_article %></h1>
          <%= yield %>
          <p><time datetime="<%= current_article.date %>"><%= current_article.date.strftime('%A, %e %B %Y') %></time></p>
          <!--<p>Category: <%= current_article.tags.map{|tag| link_to(tag, tag_path(tag)) }.join(', ') %>.</p>-->
        </article>
      </main>

      <%= partial "aside" %>

      <footer>
        <div class="search mobile-only"><input type="text" placeholder="Search..." class="st-default-search-input"></div>
        Copyright © 2005–2015 Makzan.
      </footer>
    </div>
    <script src="/javascripts/site.js"></script>
  </body>
</html>
