$break-point: 600px;

////
* {
  box-sizing: border-box;
}
img {
  max-width: 100%;
}

///////
// Layout

.page {
  margin: 1.5em auto;
  width: 100%;
  max-width: 700px;
}

aside {
  @media screen and (min-width: $break-point) {
    width: 18%;
    float: right;
    margin-top: 3em;
    text-align: right;
  }
}

#main {
  @media screen and (min-width: $break-point) {
    width: 80%;
    float: left;
  }
}

footer {
  clear: both;
}

blockquote {
  border-left: 2px solid #ddd;
  margin: 0;
  padding-left: 1.5em;
}

///////
// basic color
body {
  background: #fbfbfb;
  color: #222;
}

////////
// typography

body {
  line-height: 140%;
}

header {
  h1 {
    font-size: 100%;
    display: inline;
    font-weight: normal;

    small {
      font-size: 100%;
    }
  }

  .search {
    float: right;
  }

}

h1 {
  font-size: 100%;
}

h2 {
  line-height: 110%;
}

//// Code and Code block
code {
  background: rgba(211, 241, 255, 0.5);
  padding: 0.5em;
  border-radius: 3px;
}
pre code {
  background: none;
  padding: 0;
}

// from: https://css-tricks.com/snippets/css/make-pre-text-wrap/
pre,
pre code {
 white-space: pre-wrap;       /* css-3 */
 white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
 white-space: -pre-wrap;      /* Opera 4-6 */
 white-space: -o-pre-wrap;    /* Opera 7 */
 word-wrap: break-word;       /* Internet Explorer 5.5+ */
}

//////

time {
  font-style: italic;
}

////////

.page a {
  &:link {
    color: #3e8ec6;
    text-decoration: none;
    padding: 0.3em 0;
  }
  &:visited {
    color: darken(#3e8ec6, 10%);
  }
  &:hover {
    color: white;
    background: darken(#3e8ec6, 10%);
  }
}

/////
// Nav
nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

//////
footer {
  color: gray;
}


////
.mobile-only {
  display: block;

  @media screen and (min-width: $break-point) {
    display: none;
  }
}
.wide-screen-only {
  display: none;
  @media screen and (min-width: $break-point) {
    display: block;
  }
}



