$break-point: 600px;

////
* {
  box-sizing: border-box;
}
img {
  max-width: 100%;
}

p:first-child,
h1:first-child,
h2:first-child,
h3:first-child,
h4:first-child,
{
  margin-top: 0;
}

///////
// Layout

.top-area {
  min-height: 1em;

  @media screen and (min-width: $break-point) {
    min-height: 80px;
    padding: 20px;
  }
}

.page {
  margin: 1.5em auto;
  width: 100%;
  max-width: 860px;
}

aside {
  margin-bottom: 2em;
  @media screen and (min-width: $break-point) {
    width: 38%;
    float: left;
  }
}

#main {
  @media screen and (min-width: $break-point) {
    width: 60%;
    float: right;
  }
}

footer {
  clear: both;
  padding-top: 3em;
}

blockquote {
  border-left: 2px solid #ddd;
  margin: 0;
  padding-left: 1.5em;
}



///////
// basic color
body {
  background: #fbfbfb;
  color: #222;
}

////////
// typography

body {
  line-height: 1.45em;
  font-family: Georgia, serif;
  font-weight: normal;
  -webkit-font-smoothing: antialiased;
}

header {
  h1 {
    font-size: 100%;
    display: inline;
    font-weight: bold;

    small {
      font-size: 100%;
      font-weight: normal;
    }
  }

}

.search.wide-screen-only {
  float: right;
}


h1, h2, h3, h4 {
  font-size: 100%;
  font-family: "Gill Sans MT", sans-serif;
}


//// Code and Code block
code {
  background: rgba(211, 241, 255, 0.5);
  padding: 0.5em;
  border-radius: 3px;
}
pre code {
  background: none;
  padding: 0;
}

// from: https://css-tricks.com/snippets/css/make-pre-text-wrap/
pre,
pre code {
 white-space: pre-wrap;       /* css-3 */
 white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
 white-space: -pre-wrap;      /* Opera 4-6 */
 white-space: -o-pre-wrap;    /* Opera 7 */
 word-wrap: break-word;       /* Internet Explorer 5.5+ */
}

//////

time {
  font-style: italic;
}

.article-list li time {
  font-style: normal;
  font-family: Consolas, Monaco, "Courier New", Courier, monospace;
  font-size: 0.8em;
  color: grey;
}

////////

a {
  &:link,
  &:visited {
    color: #222;
    border-bottom: 2px solid rgba(62, 142, 198, .6);
    text-decoration: none;
  }

  footer &:link,
  footer &:visited {
    color: gray;
  }


  &:hover {
    background: rgba(255, 255, 0, 1);
  }
}


/////
// Nav
nav ul {
  list-style: none;
  margin: 0;
  padding: 0;

  li {
    display: inline;

    @media screen and (min-width: $break-point) {
      display: block;
    }
  }

}

//////
footer {
  color: gray;
  text-align: center;

  @media screen and (min-width: $break-point) {
    text-align: inherit;
  }
}

footer nav {
  margin-bottom: 1em;
  @media screen and (min-width: $break-point) {
    float: right;
  }
}


////
.mobile-only {
  display: block;

  @media screen and (min-width: $break-point) {
    display: none;
  }
}
.wide-screen-only {
  display: none;
  @media screen and (min-width: $break-point) {
    display: block;
  }
}

/////
.article-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.today-thoughts article {
  margin-top: 3em;

  &:first-of-type {
    margin-top: 0;
  }
}



